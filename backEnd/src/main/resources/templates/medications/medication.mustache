{{>header}}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header text-center bg-primary text-white">
            <h2>{{medication.name}}</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    {{#medication.boxImage}}
                        <img src="/medications/{{medication.id}}/image" alt="{{medication.name}}" class="img-fluid rounded">
                    {{/medication.boxImage}}
                    {{^medication.boxImage}}
                        <img src="/images/no_image.png" alt="No image available" class="img-fluid rounded">
                    {{/medication.boxImage}}
                </div>
                <div class="col-md-8">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Dose:</strong> {{medication.dose}}</li>
                        <li class="list-group-item"><strong>Stock:</strong> {{medication.stock}}</li>
                    </ul>
                    <div class="mt-3">
                        <p class="text-muted">{{medication.instructions}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            {{#logged}}
                <button class="btn btn-primary" onclick="location.href='/medications/removemedication/{{medication.id}}'">Remove</button>
                <button class="btn btn-primary" onclick="location.href='/medications/editmedication/{{medication.id}}'">Edit</button>
            {{/logged}}
            <button class="btn btn-primary" onclick="location.href='/medications/'">Back to Medications</button>
        </div>
    </div>
</div>

{{>footer}}
