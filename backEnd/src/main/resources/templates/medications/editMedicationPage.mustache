{{>header}}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Editar medicaci√≥n</h3>
                </div>
                <div class="card-body">
                    <form action="/medications/editmedication/{{medication.id}}" method="POST">

                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input type="text" class="form-control" name="name" id="name" value="{{medication.name}}" placeholder="Nombre" required>
                        </div>

                        <div class="form-group">
                            <label for="stock">Stock</label>
                            <input type="number" class="form-control" name="stock" id="stock" value="{{medication.stock}}" placeholder="Stock" required>
                        </div>

                        <div class="form-group">
                            <label for="dose">Dosis</label>
                            <input type="number" class="form-control" name="dose" id="dose" value="{{medication.dose}}" placeholder="Dosis" required>
                        </div>

                        <div class="form-group">
                            <label for="instructions">Instrucciones de uso</label>
                            <input type="text" class="form-control" name="instructions" id="instructions" value="{{medication.instructions}}" placeholder="Instrucciones" required>
                        </div>

                        <div class="form-group">
                            <label for="boxImage">Foto de la caja</label>
                            <input type="image" class="form-control" name="boxImage" id="boxImage">
                        </div>


                        <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    </form>

                    <div class="card mt-3">
                        <div class="card-body text-center">
                            <a href="/medications/">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{>footer}}

