{{>header}}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Editar Usuario</h3>
                </div>
                <div class="card-body">
                    <form action="/updateProfile" method="POST">
                        <!-- Username Field -->
                        <div class="form-group">
                            <label for="username">Nombre de usuario</label>
                            <input type="text" class="form-control" value="{{user.name}}" name="username" id="username" placeholder="Nombre de usuario" required>
                        </div>

                        <!-- Email Field -->
                        <div class="form-group">
                            <label for="email">Correo Electrónico</label>
                            <input type="email" class="form-control" value="{{user.email}}" name="email" id="email" placeholder="Correo Electrónico" required>
                        </div>

                        <!-- Password Field -->
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Contraseña" required>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="form-group">
                            <label for="confirmPassword">Confirmar Contraseña</label>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirmar Contraseña" required>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    </form>

                    <div class="card mt-3">
                        <div class="card-body text-center">
                            <a href="/profile">Volver al perfil</a>
                        </div>
                    </div>

                    <!-- Error or Success Messages -->
                    {{#error}}
                        <div class="alert alert-danger mt-3">
                            {{error}}
                        </div>
                    {{/error}}

                    {{#success}}
                        <div class="alert alert-success mt-3">
                            {{success}}
                        </div>
                    {{/success}}
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}
